.page-header
  .container
    .row
      .span4.course
        %h1= @assignment.course.name
      .span4.assignment
        %h1= @assignment.name

    .form-inline
      = form_for @grade, :remote => true  do |f|
        = f.fields_for @grade.student do |sf|
          = sf.hidden_field :id, :id => 'studentId'
          = sf.label :name
          = sf.text_field :name, :id => 'studentName'
        
        = f.label :score, :style => 'padding-left: 20px;'
        = f.text_field :score, :id => 'score', :style => 'width: 50px;'
        
        = f.fields_for @grade.assignment do |af|
          = af.hidden_field :id
      
        = f.submit "Save Score", :class => 'btn'

.main
  .container
    .row
      .span3
        %h3 Ungraded
        %table.table.table-bordered#UngradedTable
          %tr
            %th Students
          - @assignment.ungraded.each do |student|
            %tr.UngradedStudent
              %td
                %span= student.name
                %input{:type => 'hidden', :value => student.id }

      .span9
        %h3 Graded
        %table.table.table-bordered#GradedTable
          %tr
            %th Students
            %th Score
          - @assignment.graded.each do |grade|
            %tr
              %td= grade.student.name
              %td= grade.score
